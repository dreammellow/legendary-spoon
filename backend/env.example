# Database - Use SQLite for development, PostgreSQL for production
DATABASE_URL=sqlite:///./cryptoairdrop.db
# For production, use: DATABASE_URL=postgresql://user:password@localhost:5432/cryptoairdrop

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# AWS Configuration for KYC Face Liveness
AWS_ACCESS_KEY_ID=your_aws_access_key_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1

# CORS
ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000","https://cryptoairdrop.com"]

# Redis
REDIS_URL=redis://localhost:6379

# Email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Blockchain
ETHEREUM_RPC_URL=https://mainnet.infura.io/v3/your-project-id
POLYGON_RPC_URL=https://polygon-rpc.com

# Airdrop Settings
BASE_AIRDROP_TOKENS=1000
REFERRAL_REWARDS={"level1": 500, "level2": 100, "level3": 30}

# Admin
ADMIN_WALLET_ADDRESSES=["0x1234567890123456789012345678901234567890"]

# Wallet Connect
WALLET_CONNECT_PROJECT_ID=your-wallet-connect-project-id
